{
  "name": "@cross-ui/core",
  "version": "0.0.1",
  "description": "Cross UI, agnostic components based in Stencil",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/cross-ui-core/cross-ui-core.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "clean:dist": "rimraf dist",
    "build:prod": "stencil build --prod --docs",
    "prebuild": "move-file ./src/components/playground .tmp/playground",
    "build": "NODE_ENV=production npm-run-all -s clean:dist build:prod",
    "postbuild": "move-file .tmp/playground ./src/components/playground && rimraf .tmp",
    "start": "stencil build --dev --watch --serve --port 4000",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "dependencies": {
    "@stencil/core": "^2.6.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@stencil/postcss": "^2.0.0",
    "@stencil/sass": "^1.4.1",
    "@types/jest": "^26.0.23",
    "@types/puppeteer": "^5.4.3",
    "autoprefixer": "^10.2.6",
    "cssnano": "^5.0.5",
    "jest": "^27.0.4",
    "jest-cli": "^27.0.4",
    "move-file-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^10.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^2.1.4",
    "workbox-build": "^6.1.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimaslz/cross-ui-core.git"
  },
  "keywords": [
    "stenciljs",
    "webcomponents",
    "ui"
  ],
  "author": "Dimas LÃ³pez <me@dimaslz.io>",
  "bugs": {
    "url": "https://github.com/dimaslz/cross-ui-core/issues"
  },
  "homepage": "https://github.com/dimaslz/cross-ui-core#readme"
}
